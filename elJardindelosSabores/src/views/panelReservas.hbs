<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Reservas - Panel Administrativo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/panelReservas.css">
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <h4 class="text-center mb-4"><a href="/admin">🌿 El Jardín</a></h4>
            <a href="#" class="active" aria-current="page"><i class="bi bi-calendar"></i> Reservas</a>
            <a href="#"><i class="bi bi-receipt"></i> Pedidos</a>
            <a href="#"><i class="bi bi-box-seam"></i> Inventario</a>
            <a href="#"><i class="bi bi-graph-up"></i> Reportes</a>
            <a href="#"><i class="bi bi-gear"></i> Configuración</a>
        </div>

        <!-- Content -->
        <div class="content flex-grow-1">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Gestión de Reservas</h1>
                <button class="btn btn-outline-secondary">Cerrar Sesión</button>
            </div>


            <!-- Modal Nueva Reserva -->
<div class="modal fade" id="nuevaReservaModal" tabindex="-1" aria-labelledby="nuevaReservaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="nuevaReservaModalLabel">Nueva Reserva</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="nuevaReservaForm">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" id="nombre" name="nombre" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="correo" class="form-label">Correo</label>
                        <input type="email" id="correo" name="correo" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="telefono" class="form-label">Teléfono</label>
                        <input type="text" id="telefono" name="telefono" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="personas" class="form-label">Cantidad de Personas</label>
                        <input type="number" id="personas" name="personas" class="form-control" required min="1" max="15">
                    </div>
                    <div class="mb-3">
                        <label for="fecha" class="form-label">Fecha</label>
                        <input type="date" id="fecha" name="fecha" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="hora" class="form-label">Hora</label>
                        <input type="time" id="hora" name="hora" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-success w-100">Crear Reserva</button>
                </form>
            </div>
        </div>
    </div>
</div>


            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card p-3">
                        <div class="d-flex align-items-center">
                            <div class="icon-container me-3">
                                <i class="bi bi-clock-history fs-2 text-warning"></i>
                            </div>
                            <div>
                                <h5 class="card-title">Reservas Pendientes</h5>
                                <p class="card-text">Consulta y confirma reservas que están pendientes.</p>
                            </div>
                        </div>
                        <button class="btn btn-custom mt-3">Ver Pendientes</button>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card p-3">
                        <div class="d-flex align-items-center">
                            <div class="icon-container me-3">
                                <i class="bi bi-archive fs-2 text-info"></i>
                            </div>
                            <div>
                                <h5 class="card-title">Historial de Reservas</h5>
                                <p class="card-text">Accede al historial de reservas completadas.</p>
                            </div>
                        </div>
                        <a class="btn btn-custom mt-3" href="/historialReservas">Ver Historial</a>
                    </div>
                </div>
            </div>
            <div class="row g-4 mt-4">
                <div class="col-md-6">
                    <div class="card p-3">
                        <div class="d-flex align-items-center">
                            <div class="icon-container me-3">
                                <i class="bi bi-plus-circle fs-2 text-success"></i>
                            </div>
                            <div>
                                <h5 class="card-title">Nueva Reserva</h5>
                                <p class="card-text">Agrega una nueva reserva para un cliente.</p>
                            </div>
                        </div>
                        <button class="btn btn-custom mt-3" data-bs-toggle="modal" data-bs-target="#nuevaReservaModal">Crear Reserva</button>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card p-3">
                        <div class="d-flex align-items-center">
                            <div class="icon-container me-3">
                                <i class="bi bi-x-circle fs-2 text-danger"></i>
                            </div>
                            <div>
                                <h5 class="card-title">Cancelar Reservas</h5>
                                <p class="card-text">Gestiona las reservas canceladas.</p>
                            </div>
                        </div>
                        <button class="btn btn-custom mt-3">Ver Canceladas</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io(); // Inicializar Socket.IO

    document.getElementById('nuevaReservaForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        const nuevaReserva = {
            nombre: document.getElementById('nombre').value,
            correo: document.getElementById('correo').value,
            telefono: document.getElementById('telefono').value,
            personas: document.getElementById('personas').value,
            fecha: document.getElementById('fecha').value,
            hora: document.getElementById('hora').value,
            estado: 'Pendiente',
        };

        try {
            const response = await fetch('/reservas', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(nuevaReserva),
            });

            const reservaCreada = await response.json();
            const modalInstance = bootstrap.Modal.getInstance(document.getElementById('nuevaReservaModal'));
            modalInstance.hide();

            socket.emit('nuevaReserva', reservaCreada); // Emitir evento con Socket.IO
            alert('Reserva creada con éxito');
        } catch (error) {
            console.error('Error al crear la reserva:', error);
            alert('Hubo un error al crear la reserva.');
        }
    });
</script>

</body>
</html>
